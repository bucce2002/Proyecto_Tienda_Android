<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondosaaw"
    tools:context=".AyudaActivity">

    <ImageView
        android:id="@+id/menuIc"
        android:layout_width="53dp"
        android:layout_height="57dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_baseline_menu_24" />

    <ImageView
        android:id="@+id/logoIc"
        android:layout_width="54dp"
        android:layout_height="68dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_toRightOf="@id/menuIc"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/filtroIc"
        android:layout_width="58dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="117dp"
        android:layout_toRightOf="@id/logoIc"
        android:src="@drawable/ic_baseline_filter_alt_24" />

    <ImageView
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/logoIc"
        android:src="@drawable/linea"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linea"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="@color/gris1"
        android:shadowDx="7"
        android:layout_centerHorizontal="true"
        android:shadowDy="7"
        android:shadowRadius="7"
        android:text="@string/sobre_shopinfo"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="@string/preguntas_frecuentes"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_below="@id/textView1"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:hint="@string/que_es_shopinfo"
        android:textAlignment="textStart"
        android:layout_below="@id/textView2"
        android:textColorHint="#A1887F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:layout_below="@id/textView3"
        android:hint="@string/tiempo_para_devolver_un_producto"
        android:textAlignment="textStart"
        android:textColorHint="#A1887F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:hint="@string/los_productos_tienen_garantia"
        android:textAlignment="textStart"
        android:layout_below="@id/textView4"
        android:textColorHint="#A1887F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/usar_shopinfo"
        android:layout_below="@id/textView5"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:hint="@string/metodos_de_pago"
        android:textAlignment="textStart"
        android:textColorHint="#A1887F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/textView7"
        android:background="@color/white"
        android:hint="@string/tiempos_de_entrega_aproximados"
        android:textAlignment="textStart"
        android:textColorHint="#A1887F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/shopinfo_premium"
        android:textColor="#000000"
        android:layout_below="@id/textView8"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/textView10"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:hint="@string/que_es_shopinfo_premium"
        android:textAlignment="textStart"
        android:textColorHint="#A1887F"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_below="@id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:hint="@string/ventajas_de_esta_version"
        android:textAlignment="textStart"
        android:textColorHint="#A1887F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:background="@color/white"
        android:hint="@string/suscripcion_y_precios"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView12"
        android:textAlignment="textStart"
        android:textColorHint="#A1887F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

</RelativeLayout>